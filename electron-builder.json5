// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.github.steam.desktop.authenticator",
  "asar": true,
  "productName": "Steam Desktop Authenticator",
  "directories": {
    "output": "release/${version}",
    "buildResources": "build"
  },
  "publish": {
    "provider": "github",
    "owner": "zhangpan-soft",
    "repo": "steam-desktop-authenticator"
  },
  "files": [
    "dist",
    "dist-electron"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "artifactName": "${productName}-Mac-${arch}-${version}.${ext}",
    "icon": "build/icons/icon.icns",
    "identity": null
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "ia32",
          "arm64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${arch}-${version}.${ext}",
    "icon": "build/icons/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "tar.gz",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "deb",
        "arch": ["x64", "arm64"]
      }
    ],
    "artifactName": "${productName}-Linux-${arch}-${version}.${ext}",
    "icon": "build/icons"
  }
}
